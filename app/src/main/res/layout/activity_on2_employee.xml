<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".on2_employee">

    <ImageView
        android:id="@+id/phoneemp"
        android:layout_width="172dp"
        android:layout_height="140dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/employe_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/bus"/>



    <TextView
        android:id="@+id/visualisez_"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal|top"
        android:text="@string/visualisez_"
        android:textAppearance="@style/visualisez_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneemp" />

    <TextView
        android:id="@+id/ignorer"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:gravity="top"
        android:text="@string/ignorer"
        android:textAppearance="@style/ignorer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visualisez_" />

    <Button
        android:id="@+id/inactive"
        android:layout_width="10dp"
        android:layout_height="5dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/dot"
        android:backgroundTint="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visualisez_"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/active"
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:layout_marginEnd="310dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visualisez_"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>